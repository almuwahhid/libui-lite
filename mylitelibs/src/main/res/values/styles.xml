<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="DialogTopAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>
    <style name="DialogTopAnimationAlert">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom_alert</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top_alert</item>
    </style>
    <style name="clickable" parent="android:Widget.TextView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
</resources>